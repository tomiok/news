{{template "base" .}}
{{define "css"}}
    <link rel="stylesheet" href="/static/styles.css"/>
{{end}}
{{define "content"}}
    <div id="news">
        {{$article := .Article}}
        <div class="card">
            <h2>
                {{ $article.Title }}
            </h2>

            <div>
                {{ $article.Description}}
            </div>
            <div>
                {{ $article.Content}}
            </div>
            <div>
                <div>
                    {{$article.Categories}}
                </div>
            </div>
        </div>

    </div>
{{end}}
